script( type="application/ld+json" ).
	{
		"@context": "http://schema.org",
		"@type": "Article",
		"mainEntityOfPage": {
			"@type": "WebPage",
			"@id": "#{page.url}"
		},
		"headline": "#{page.title}",
		"image": {
			"@type": "ImageObject",
